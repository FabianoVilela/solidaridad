<%=render '_content_for/script'%>
<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <div class="row center form-search-main">
        <div class="card amber accent-3">
          <div class="card-content">
            <h3>Ajude quem precisa de ajuda</h3>
          </div>
          <div class="card-tabs">
            <ul class="tabs tabs-fixed-width">
              <li class="tab"><a class="active" href="#add-needy">Adicionar</a></li>
              <li class="tab"><a href="#search-needy">Localizar</a></li>
            </ul>
          </div>

          <div class="card-content grey lighten-4">
            <div id="add-needy">
              <div class="row">
                <%= form_for(@needy, html: {class: "col s12"}) do |form| %>
                  <%=render partial: '_content_for/error_message', locals: {object: @needy}%>
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">home</i>
                      <%= form.text_field :address %>
                      <label for="needy_address">Endereço</label>
                    </div>
                    <div class="input-field col s6">
                      <i class="material-icons prefix">account_circle</i>
                      <%= form.text_field :name %>
                      <label for="needy_name">Nomes</label>
                    </div>
                    <div class="input-field col s6">
                      <i class="material-icons prefix">exposure_plus_1</i>
                      <%= form.number_field :quantity_person, min: 1 %>
                      <label for="needy_quantity_person">Quantidade de pessoas</label>
                    </div>                    
                    <div class="input-field col s12">
                      <i class="material-icons prefix">mode_edit</i>
                      <%= form.text_area :description,  class: 'materialize-textarea' %>
                      <label for="needy_description">Descrição</label>
                    </div>
                  </div>
                  <div class="actions">
                    <%= form.submit class: "waves-effect waves-light btn-large amber btn-form", value: 'Adicionar', data: {disable_with: 'Adicionando...'}%>
                      
                  </div>
                <% end %>
              </div>
            </div>

            <div id="search-needy">
              <div class="row">
                <form class="col s12">
                  <div class="row">
                    <div class="input-field col s6">
                      <i class="material-icons prefix">account_circle</i>
                      <input id="icon_prefix" type="text" class="validate">
                      <label for="icon_prefix">Field B1</label>
                    </div>
                    <div class="input-field col s6">
                      <i class="material-icons prefix">phone</i>
                      <input id="icon_telephone" type="tel" class="validate">
                      <label for="icon_telephone">Field B2</label>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="parallax"><img src="/images/background1.jpg" alt="Unsplashed background img 1"></div>
</div>

