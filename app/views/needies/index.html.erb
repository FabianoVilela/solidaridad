<%=render '_content_for/script'%>
<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <div class="row center form-search-main">
        <div class="card amber accent-3">
          <div class="card-content">
            <h3>Ajude quem precisa de ajuda</h3>
          </div>
          <div class="card-tabs">
            <ul class="tabs tabs-fixed-width">
              <li class="tab"><a class="active" href="#add-needy">Adicionar</a></li>
              <li class="tab"><a href="#search-needy">Localizar</a></li>
            </ul>
          </div>

          <div class="card-content grey lighten-4">
            <div id="add-needy">
              <div class="card-panel">
                <div class="row">
                  <%= form_for(@needy) do |f| %>
                    <%=f.hidden_field :latitude %>
                    <%=f.hidden_field :longitude%>
                    <%=render partial: '_content_for/error_message', locals: {object: @needy}%>                    
                    <div class="row">
                      <div class="input-field col s12">
                        <%= f.text_field :address, placeholder: '', class: 'autocomplete' %>
                        <%= f.label :address%>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12">
                        <%= f.text_field :name %>
                        <%= f.label :name%>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s6">
                        <%= f.number_field :quantity_person, min: 1 %>
                        <%= f.label :quantity_person%>
                      </div> 
                      <div class="input-field col s6">          
                        <%= f.collection_select :category_ids, Category.all, :id, :name, {prompt: 'Selecione uma necessidade'}, {multiple: true, class: 'needy_category'}%>
                        <%= f.label :category_ids%>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12">
                        <%= f.text_area :description,  class: 'materialize-textarea' %>
                        <%= f.label :description%>
                      </div>
                      <div class="row">
                        <div class="input-field col s12">
                          <%= f.submit class: "waves-effect waves-orange btn-large amber btn-form", value: 'Adicionar', data: {disable_with: 'Adicionando...'}%>
                        </div>
                      </div>
                    </div>
                  <%end%>
                </div>
              </div>
            </div>

            <div id="search-needy">
            <div class="card-panel">
              <div class="row">
                <form class="col s12">
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">home</i>
                      <input id="icon_prefix" type="text" class="validate">
                      <label for="icon_prefix">Endere√ßo</label>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="parallax"><img src="/images/background1.jpg" alt="Morador de rua"></div>
</div>

