
<ul class="collection">

  <%- if controller_name != 'sessions' %>
    <li class="collection-item">

        <%= link_to "Entrar", new_session_path(resource_name) %><br />
      
    </li>
  <% end -%>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <li class="collection-item">

        <%= link_to "Registrar", new_registration_path(resource_name) %><br />
      
    </li>
  <% end -%>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <li class="collection-item">

        <%= link_to "Esqueceu a senha?", new_password_path(resource_name) %><br />
      
    </li>
  <% end -%>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <li class="collection-item">

        <%= link_to "Não recebeu uma instrução de confirmação?", new_confirmation_path(resource_name) %><br />
      
    </li>
  <% end -%>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <li class="collection-item">

        <%= link_to "Não recebeu instruções para desbloqueio?", new_unlock_path(resource_name) %><br />
      
    </li>
  <% end -%>
  <%- if devise_mapping.omniauthable? %>
    <li class="collection-item">

        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
        <% end -%>
      
    </li>
  <% end -%>
</ul>